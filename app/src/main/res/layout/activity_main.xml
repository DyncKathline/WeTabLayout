<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <cn.we.tablayout.WeTabLayout
        android:id="@+id/dil_tablayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:wtl_indicator_color="@color/colorAccent"
        app:wtl_indicator_corner_radius="4dp"
        app:wtl_indicator_height="2dp"
        app:wtl_indicator_margin_bottom="4dp"
        app:wtl_tab_padding_left="10dp"
        app:wtl_tab_padding_right="10dp"
        app:wtl_selected_text_bold="true"
        app:wtl_indicator_width_equal_title="false"
        app:wtl_tab_fill_container="true"
        app:wtl_default_text_color="@color/colorPrimary"
        app:wtl_default_text_size="16sp"
        app:wtl_selected_text_color="@color/colorAccent"
        app:wtl_selected_text_size="16sp" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp" />

</LinearLayout>